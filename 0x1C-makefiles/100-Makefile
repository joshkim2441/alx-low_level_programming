CC = gcc
SRC = $(wilcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) - o $(NAME)

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *~ \#*\#

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all
